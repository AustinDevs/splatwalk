# DigitalOcean API
DO_API_TOKEN=your_digitalocean_api_token
DO_SPACES_KEY=your_spaces_access_key
DO_SPACES_SECRET=your_spaces_secret_key
DO_SPACES_BUCKET=splatwalk
DO_SPACES_REGION=nyc3
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# SSH Key for GPU Droplets
DO_SSH_KEY_ID=your_ssh_key_id
DO_SSH_PRIVATE_KEY_PATH=~/.ssh/splatwalk_gpu

# GPU Droplet Config
# H100 80GB:       gpu-h100x1-80gb    ($3.40/hr) — max headroom
# RTX 4000 Ada:    gpu-4000adax1-20gb ($0.76/hr) — budget, set tuning vars below
GPU_DROPLET_SIZE=gpu-h100x1-80gb
GPU_DROPLET_REGION=nyc2
GPU_DROPLET_IMAGE=gpu-h100x1-base
# Replace with your GitHub username/org
GPU_DOCKER_IMAGE=ghcr.io/your-username/webvr-listings/splatwalk-gpu:latest

# Pipeline tuning (for smaller GPUs like RTX 4000 Ada 20GB)
# Uncomment these when using gpu-4000adax1-20gb:
# MAX_N_VIEWS=16
# VIEWCRAFTER_BATCH_SIZE=5
# TRAIN_ITERATIONS=5000

# GitHub Container Registry (for private repos)
# Create a PAT at https://github.com/settings/tokens with read:packages scope
GHCR_USERNAME=your-github-username
GHCR_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx

# Backend Config
PORT=3000
NODE_ENV=development
DATABASE_URL=./data/splatwalk.db

# Rate Limiting
RATE_LIMIT_JOBS_PER_HOUR=5
MAX_CONCURRENT_JOBS=2

# Slack Notifications (optional)
# Create an Incoming Webhook at https://api.slack.com/apps → Incoming Webhooks
SLACK_WEBHOOK_URL=

# Timeouts (in milliseconds)
GPU_TIMEOUT_MS=3600000
SCRAPE_TIMEOUT_MS=60000
